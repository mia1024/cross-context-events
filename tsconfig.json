{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "sourceMap": true,
    "removeComments": true,
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "moduleResolution": "node",
    "sourceRoot": "src",
    "baseUrl": "src",
    "jsx": "preserve",
    "useDefineForClassFields": true,
    "extendedDiagnostics": true,
    "outDir": "dist",
  },
  "include": [
    "src/*"
  ]
}
